<!DOCTYPE html>
<html lang="en">
	<head>
		<!-- @include "meta.kit" -->
		<title>Pet Store</title>
		<!-- @include "link.kit" -->
		<link rel="stylesheet" href="./dist/css/style.min.css" />
		<script
			src="https://kit.fontawesome.com/bdb2f8ae99.js"
			crossorigin="anonymous"
		></script>
	</head>
	<body>
		<!-- @include "nav.kit" -->
		<!-- @include "header.kit" -->
		<main class="main">
			<div class="wrapper">
				<section class="main__products">
					<h2 class="main__title">Our Products</h2>
					<div class="main__products-box">
						<div class="main__product">
							<div class="main__product-left">
								<p class="main__productname">Pedigree</p>
								<p class="main__productdesc">Best food for your best friend</p>
								<button class="main__button main__button--buy main__button--dog">
									<p class="main__button-text">get it</p>
								</button>
							</div>
							<div class="main__product-right">
								<img
									src="./dist/img/pedigree.png"
									alt="Pedigree food for dogs"
									class="main__productimg"
								/>
							</div>
						</div>
						<div class="main__product">
							<div class="main__product-left">
								<p class="main__productname">Reveal</p>
								<p class="main__productdesc">Best food for your cat</p>
								<button class="main__button main__button--buy main__button--cat">
									<p class="main__button-text">get it</p>
								</button>
							</div>
							<div class="main__product-right">
								<img
									src="./dist/img/catfood.png"
									alt="Reveal food for cat"
									class="main__productimg"
								/>
							</div>
						</div>
						<div class="main__product">
							<div class="main__product-left">
								<p class="main__productname">DogToys</p>
								<p class="main__productdesc">Toy for your dog.</p>
								<button class="main__button main__button--buy main__button--dog">
									<p class="main__button-text">get it</p>
								</button>
							</div>
							<div class="main__product-right">
								<img
									src="./dist/img/dogtoy.png"
									alt="Dog holding toy in his mount"
									class="main__productimg"
								/>
							</div>
						</div>
						<div class="main__product">
							<div class="main__product-left">
								<p class="main__productname">Aquatel</p>
								<p class="main__productdesc">Aquarium set for start</p>
								<button class="main__button main__button--buy main__button--aquarium">
									<p class="main__button-text">get it</p>
								</button>
							</div>
							<div class="main__product-right">
								<img
									src="./dist/img/aquarium.png"
									alt="Aquarium"
									class="main__productimg"
								/>
							</div>
						</div>
					</div>
				</section>
			</div>
			<section class="main__gifbox">
				<img
					src="./dist/img/maingif.gif"
					alt="Dog smilling"
					class="main__gif"
				/>
			</section>
			<div class="wrapper">
				<section class="main__categories">
					<h2 class="main__title">pet categories</h2>
					<div class="main__categoriesbox">
						<ul class="main__categories-list">
							<li class="main__categories-item">
								<a href="./colections/dog.html" class="main__categories-link"
									><p class="main__categories-text">dog</p></a
								>
								<img
									class="main__categories-img"
									src="./dist/img/dog1.jpg"
									alt="Dog Photo"
								/>
							</li>
							<li class="main__categories-item">
								<a
									href="./colections/cat.html"
									class="main__categories-link main__categories-link--cat"
									><p class="main__categories-text">cat</p></a
								>
								<img
									class="main__categories-img"
									src="./dist/img/cat.jpg"
									alt="Cat Photo"
								/>
							</li>
							<li class="main__categories-item">
								<a
									href="./colections/bird.html"
									class="main__categories-link main__categories-link--bird"
									><p class="main__categories-text">bird</p></a
								>
								<img
									class="main__categories-img"
									src="./dist/img/bird.jpeg"
									alt="Bird Photo"
								/>
							</li>
							<li class="main__categories-item">
								<a
									href="./colections/aquariumpond.html"
									class="main__categories-link main__categories-link--fish"
									><p class="main__categories-text">aquarium & pond</p></a
								>
								<img
									class="main__categories-img"
									src="./dist/img/fish.jpg"
									alt="Fish Photo"
								/>
							</li>
							<li class="main__categories-item">
								<a
									href="./colections/smallpet.html"
									class="main__categories-link main__categories-link--smallpet"
									><p class="main__categories-text">small pet</p></a
								>
								<img
									class="main__categories-img"
									src="./dist/img/smallpet.jpg"
									alt="Small Pet Photo"
								/>
							</li>
							<li class="main__categories-item">
								<a
									href="./colections/reptile.html"
									class="main__categories-link main__categories-link--reptile"
									><p class="main__categories-text">reptile</p></a
								>
								<img
									class="main__categories-img"
									src="./dist/img/reptile.jfif"
									alt="Reptile Photo"
								/>
							</li>
						</ul>
					</div>
				</section>
			</div>
			<section class="main__subscribe">
				<div class="main__subscribebox">
					<p class="main__subscribe-title">get fresh deals and articles</p>
					<div class="main__inputs">
						<input
							type="text"
							class="main__input"
							placeholder="Enter your email"
						/>
						<button class="main__button main__button--subscribe">
							Subscribe
						</button>
					</div>
				</div>
			</section>
			<div class="wrapper">
				<section class="main__blog">
					<h2 class="main__title">Our blog</h2>
					<div class="main__blogbox">
						<ul class="main__blog-list">
							<li class="main__blog-item">
								<img
									src="./dist/img/blog1.jpg"
									alt="Dog brushing teeths"
									class="main__blog-img"
								/>
								<p class="main__blog-time">Feb 02, 2020</p>
								<a href="#" class="main__blog-title"
									>How to brush your dog teeths</a
								>
							</li>
							<li class="main__blog-item">
								<img
									src="./dist/img/blog2.jpg"
									alt="Dog taking bath"
									class="main__blog-img"
								/>
								<p class="main__blog-time">Apr 05, 2021</p>
								<a href="#" class="main__blog-title">Should cats take baths</a>
							</li>
							<li class="main__blog-item">
								<img
									src="./dist/img/blog3.jpg"
									alt="Aquarium"
									class="main__blog-img"
								/>
								<p class="main__blog-time">Feb 21, 2021</p>
								<a href="#" class="main__blog-title"
									>How to create good looking aquarium</a
								>
							</li>
						</ul>
					</div>
				</section>
			</div>
		</main>
		<!-- @include "footer.kit" -->
		<script src="./dist/js/index.min.js"></script>
		<script src="./dist/js/header.min.js"></script>
	</body>
</html>
